---
import LayoutMinecraft from '../../../../layouts/LayoutMinecraft.astro'
import KidName from './KidName.astro'
import CountdownTimer from './CountdownTimer'
---

<LayoutMinecraft title="Alexandro Gael">
	<main class="flex flex-col relative">
		<div class="invite-hero flex flex-col items-center">
			<img class="title-top" src="/invites/minecraft/minecraft.webp" alt="minecraft" />
			<KidName />

			<p class="invite-age animate-wiggle animate-infinite xs:text-[13rem] ms:text-[20rem]">9</p>

			<img
				class="title animate-wiggle animate-infinite"
				src="/invites/minecraft/minecraft.webp"
				alt="minecraft"
			/>
			<img
				class="pico xs:w-[2rem] ms:w-[3rem] sm:w-[4rem]"
				src="/invites/minecraft/pico.webp"
				alt="minecraft"
			/>
			<!-- <h4
				class="join-party text-5xl font-[Minecraft] text-center text-white animate-wiggle animate-infinite"
			>
				PARTY
			</h4> -->
		</div>

		<div class="invite-info text-center flex flex-col justify-center">
			<p
				class="text-white text-[2rem] font-[VT323] [text-shadow:_0.2rem_0.2rem_0_#393938,_0_0_2rem_rgb(0_0_0_/_80%)] leading-8 mt-10 mb-10"
			>
				¡Unete a mi fiesta de cumpleaños!
			</p>
			<div
				class="date-container text-center flex justify-center items-center flex-col xs:w-[14rem] xs:h-[14rem] ms:w-[16rem] ms:h-[16rem] xs:before:w-[14rem] xs:before:h-[14rem] ms:before:w-[16rem] ms:before:h-[16rem]"
			>
				<p
					class="date-text text-white xs:text-[2.2rem] ms:text-[2.8rem] sm:text-[4rem] font-[VT323]"
				>
					DOMINGO
				</p>
				<h5
					class="date-day-number text-[8rem] font-[Minecraft] m-0 leading-[0.7] pt-[1rem] [text-shadow:_0_0.8rem_0_#2b2c2a,_0_0_2rem_rgb(0_0_0_/_80%)]"
				>
					10
				</h5>
				<p
					class="date-text text-white xs:text-[2.2rem] ms:text-[2.5rem] sm:text-[3rem] font-[VT323]"
				>
					MARZO
				</p>
			</div>
			<p
				class="text-white text-[2rem] font-[VT323] [text-shadow:_0.2rem_0.2rem_0_#393938,_0_0_2rem_rgb(0_0_0_/_80%)] leading-8 mt-5 mb-0"
			>
				3:30 p.m.
			</p>
			<CountdownTimer client:only="react" />
		</div>
	</main>
</LayoutMinecraft>

<style>
	@import url('https://fonts.cdnfonts.com/css/minecraft-4');
	@import url('https://fonts.googleapis.com/css2?family=VT323&display=swap');

	main {
		margin: 0 auto;
		overflow-x: hidden;
		overflow-y: auto;
		padding: 0;
		max-width: 450px;
	}

	.invite-hero {
		background-image: url('/invites/minecraft/peakpx2.webp');
		background-size: auto 100%;
		background-repeat: no-repeat;
		background-position: center;
		padding: 5rem 2rem 8rem;

		width: 100%;
		min-height: 100dvh;
		position: relative;
	}

	.invite-hero img.title-top {
		min-width: 30%;
		max-width: 50%;
		position: absolute;
		top: 2rem;
	}

	.invite-hero img.title {
		min-width: 100%;
		position: absolute;
		bottom: -3rem;
	}

	.invite-hero img.pico {
		position: absolute;
		bottom: 5rem;
		animation: bounce 1s ease-in-out infinite;
	}

	.invite-age {
		font-family: 'Minecraft';
		color: #f9f6ec;
		text-shadow:
			0 1rem #7ab267,
			0rem 0.8rem 1.5rem rgba(0, 0, 0, 0.4);
		line-height: 1;
	}

	.invite-info {
		background-image: url('/invites/minecraft/grass.webp');
		background-size: cover;
		background-repeat: no-repeat;
		width: 100%;
		min-height: 120dvh;
		padding: 2rem 2rem;
	}

	.join-party {
		position: absolute;
		bottom: -5rem;
		text-shadow:
			0rem 0.3rem #343530,
			0rem 1rem 1.5rem rgba(0, 0, 0, 0.7);
	}

	.date-container {
		margin: 2rem auto;
		border: 3px dashed white;
		position: relative;
	}

	.date-container::before {
		content: '';
		position: absolute;
		top: 0.1rem;
		left: 0.1rem;
		border: 0.2rem #09090983 dashed;
	}

	.date-day-number {
		color: #beff3d;
	}

	.date-text {
		text-shadow:
			0.3rem 0.3rem #2c2d29,
			0rem 1rem 1.5rem rgba(0, 0, 0, 0.7);
	}

	@keyframes bounce {
		0%,
		20%,
		50%,
		80%,
		100% {
			transform: translateY(0) rotate(134deg);
		}
		40% {
			transform: translateY(-30px) rotate(134deg);
		}
		60% {
			transform: translateY(-15px) rotate(134deg);
		}
	}
</style>

<style is:global>
	.minecraft-btn {
		background-image: url(data:image/png;base64,);
		font-family: 'VT323';
		border-color: #aaa #565656 #565656 #aaa;
		text-shadow: 0.2rem 0.2rem #4c4c4c;
		outline: 0.2rem solid #000;
	}

	.minecraft-btn:hover {
		background-image: url(data:image/png;base64,);
		border-color: #bdc6ff #59639a #59639a #bdc6ff;
	}
</style>
