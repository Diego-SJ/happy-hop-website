---
import KidName from './KidName.astro'
import CountdownTimer from '../../../../components/fiesta/spider-man/CountdownTimer'
import Actions from '../../../../components/fiesta/spider-man/Actions'
import LayoutSpiderMan from '../../../../layouts/fiesta/LayoutSpiderMan.astro'
---

<LayoutSpiderMan title="Alexys">
	<main class="flex flex-col relative overflow-y-auto">
		<div class="invite-hero flex flex-col items-center">
			<div class="w-full flex-col items-center">
				<img
					src="/invites/fiesta/spider-man/sipderman.webp"
					alt="scoob!"
					class="w-[90%] animate-fade-up animate-once animate-duration-700 mx-auto"
				/>
				<KidName />
			</div>
			<p
				class="text-white text-shadow text-center leading-[1.1] custom-font mt-16 shadow-scoob-sm text-5xl animate-fade-up animate-once animate-duration-700 animate-delay-[400ms] mb-1"
			>
				Te invitan a su cumplea√±os
			</p>
			<h5
				class="text-stroke-3 age-text-shadow text-white drop-shadow-[0.4rem_0.4rem_var(--tw-shadow-color)] shadow-black text-stroke-2 custom-font text-8xl animate-fade-up animate-once animate-duration-700 animate-delay-[400ms]"
			>
				# 1
			</h5>
			<div
				class="flex flex-col font-[Handlee] w-full text-center mt-20 mb-10 animate-fade-up animate-once animate-duration-700 animate-delay-[400ms]"
			>
				<div class="flex justify-center items-center text-[#ffffff] text-center w-full mb-3">
					<span
						class="custom-font text-shadow w-[40%] xs:text-[1.2rem] ms:text-[1.6rem] relative before:absolute before:content-[''] before:h-[3px] before:w-[80%] before:ml-[10%] before:-top-1 before:left-0 before:bg-[#ffffff] after:absolute after:content-[''] after:h-[3px] after:w-[80%] after:ml-[10%] after:-bottom-1 after:left-0 after:bg-[#ffffff]"
						>Domingo</span
					>
					<span
						class="custom-font age-text-shadow w-[20%] text-8xl drop-shadow-[0.4rem_0.4rem_var(--tw-shadow-color)] shadow-black text-stroke-2"
						>4</span
					>
					<span
						class="custom-font text-shadow w-[40%] xs:text-[1.2rem] ms:text-[1.6rem] relative before:absolute before:content-[''] before:h-[3px] before:w-[80%] before:ml-[10%] before:-top-1 before:left-0 before:bg-[#ffffff] after:absolute after:content-[''] after:h-[3px] after:w-[80%] after:ml-[10%] after:-bottom-1 after:left-0 after:bg-[#ffffff]"
						>de Agosto</span
					>
				</div>
				<p class="custom-font text-shadow text-white block text-center w-full text-2xl">
					a partir de las 11:00 am
				</p>
			</div>
			<CountdownTimer client:only="react" />
			<Actions client:only="react" />
		</div>
	</main>
</LayoutSpiderMan>

<style>
	main {
		margin: 0 auto;
		overflow-x: hidden;
		overflow-y: auto;
		padding: 0;
		max-width: 450px;
	}

	.invite-hero {
		background-image: url('/invites/fiesta/spider-man/spider-man-bg.webp');
		background-size: cover;
		background-repeat: no-repeat;
		background-position: bottom;
		padding: 3rem 1rem 2rem;

		width: 100%;
		min-height: 100dvh;
		position: relative;
	}
</style>
