---
import Actions from '../../../../components/fiesta/scoob/Actions'
import CountdownTimer from '../../../../components/fiesta/scoob/CountdownTimer'
import LayoutScoob from '../../../../layouts/fiesta/LayoutScoob.astro'
import KidName from './KidName.astro'
---

<LayoutScoob title="Alexys">
	<main class="flex flex-col relative overflow-y-auto">
		<div class="invite-hero flex flex-col items-center">
			<img
				src="/invites/scoob/scoobi.webp"
				alt="scoob!"
				class="w-[90%] animate-fade-up animate-once animate-duration-700"
			/>
			<KidName />
			<p
				class="text-white scoob-font mt-10 shadow-scoob-sm xs:text-lg ms:text-2xl animate-fade-up animate-once animate-duration-700 animate-delay-[400ms] mb-1"
			>
				Te invitan a su cumpleaños
			</p>
			<h5
				class="text-white scoob-font shadow-scoob-sm text-5xl animate-fade-up animate-once animate-duration-700 animate-delay-[400ms]"
			>
				No. 3
			</h5>
			<div
				class="flex flex-col font-[Handlee] w-full text-center mt-8 mb-10 animate-fade-up animate-once animate-duration-700 animate-delay-[400ms]"
			>
				<div class="flex justify-center items-center text-[#ffffff] text-center w-full mb-0">
					<span
						class="scoob-font shadow-scoob w-[40%] xs:text-[1.2rem] ms:text-[1.6rem] relative before:absolute before:content-[''] before:h-[3px] before:w-[80%] before:ml-[10%] before:-top-1 before:left-0 before:bg-[#ffffff] after:absolute after:content-[''] after:h-[3px] after:w-[80%] after:ml-[10%] after:-bottom-1 after:left-0 after:bg-[#ffffff]"
						>Sábado</span
					>
					<span class="scoob-font shadow-scoob w-[20%] xs:text-[3rem] ms:text-[4rem]">23</span>
					<span
						class="scoob-font shadow-scoob w-[40%] xs:text-[1.2rem] ms:text-[1.6rem] relative before:absolute before:content-[''] before:h-[3px] before:w-[80%] before:ml-[10%] before:-top-1 before:left-0 before:bg-[#ffffff] after:absolute after:content-[''] after:h-[3px] after:w-[80%] after:ml-[10%] after:-bottom-1 after:left-0 after:bg-[#ffffff]"
						>de Marzo</span
					>
				</div>
				<p
					class="scoob-font shadow-scoob-sm text-[#ffffff] block text-center w-full xs:text-[1rem] ms:text-[1.4rem] -mt-2"
				>
					a las 4:00 pm
				</p>
			</div>
			<CountdownTimer client:only="react" />
			<Actions client:only="react" />
		</div>
	</main>
</LayoutScoob>

<style>
	main {
		margin: 0 auto;
		overflow-x: hidden;
		overflow-y: auto;
		padding: 0;
		max-width: 450px;
	}

	.invite-hero {
		background-image: url('/invites/scoob/scoob.webp');
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		padding: 3rem 1rem 2rem;

		width: 100%;
		min-height: 100dvh;
		position: relative;
	}

	.invite-hero img.title-top {
		min-width: 30%;
		max-width: 50%;
		position: absolute;
		top: 2rem;
	}

	.invite-hero img.title {
		min-width: 100%;
		position: absolute;
		bottom: -3rem;
	}

	.invite-hero img.pico {
		position: absolute;
		bottom: 5rem;
		animation: bounce 1s ease-in-out infinite;
	}

	.invite-age {
		font-family: 'Scooby Doo', sans-serif;
	}

	.invite-info {
		background-image: url('/invites/minecraft/grass.webp');
		background-size: cover;
		background-repeat: no-repeat;
		width: 100%;
		min-height: 120dvh;
		padding: 2rem 2rem;
	}

	.join-party {
		position: absolute;
		bottom: -5rem;
		text-shadow:
			0rem 0.3rem #343530,
			0rem 1rem 1.5rem rgba(0, 0, 0, 0.7);
	}

	.date-container {
		margin: 2rem auto;
		border: 3px dashed white;
		position: relative;
	}

	.date-container::before {
		content: '';
		position: absolute;
		top: 0.1rem;
		left: 0.1rem;
		border: 0.2rem #09090983 dashed;
	}

	.date-day-number {
		color: #beff3d;
	}

	.date-text {
		text-shadow:
			0.3rem 0.3rem #2c2d29,
			0rem 1rem 1.5rem rgba(0, 0, 0, 0.7);
	}

	@keyframes bounce {
		0%,
		20%,
		50%,
		80%,
		100% {
			transform: translateY(0) rotate(134deg);
		}
		40% {
			transform: translateY(-30px) rotate(134deg);
		}
		60% {
			transform: translateY(-15px) rotate(134deg);
		}
	}
</style>

<style is:global>
	.minecraft-btn {
		background-image: url(data:image/png;base64,);
		font-family: 'VT323';
		border-color: #aaa #565656 #565656 #aaa;
		text-shadow: 0.2rem 0.2rem #4c4c4c;
		outline: 0.2rem solid #000;
	}

	.minecraft-btn:hover {
		background-image: url(data:image/png;base64,);
		border-color: #bdc6ff #59639a #59639a #bdc6ff;
	}

	.shadow-scoob {
		color: #f1f5ff !important;

		text-shadow:
			3px 3px 0px #3d6adb,
			3px -3px 0px #3d6adb,
			-3px 3px 0px #3d6adb,
			-3px -3px 0px #3d6adb,
			3px 0px 0px #3d6adb,
			0px 3px 0px #3d6adb,
			-3px 0px 0px #3d6adb,
			0px -3px 0px #3d6adb !important;
	}

	.shadow-scoob-sm {
		color: #f1f5ff !important;

		text-shadow:
			2px 2px 0px #3d6adb,
			2px -2px 0px #3d6adb,
			-2px 2px 0px #3d6adb,
			-2px -2px 0px #3d6adb,
			2px 0px 0px #3d6adb,
			0px 2px 0px #3d6adb,
			-2px 0px 0px #3d6adb,
			0px -2px 0px #3d6adb !important;
	}

	.shadow-scoob-2 {
		color: #fefff1 !important;

		text-shadow:
			1px 1px 0px #f8c84e,
			1px -1px 0px #f8c84e,
			-1px 1px 0px #f8c84e,
			-1px -1px 0px #f8c84e,
			1px 0px 0px #f8c84e,
			0px 1px 0px #f8c84e,
			-1px 0px 0px #f8c84e,
			0px -1px 0px #f8c84e !important;
	}

	.scoob-epic {
		font-family: 'ScoobEpic' !important;
	}
</style>
