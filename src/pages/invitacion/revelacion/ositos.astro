---
import LayoutRevealBear from '../../../layouts/LayoutRevealBear.astro'
import CountdownTimer from './CountdownTimer'
import SelectSex from './SelectSex'
import Actions from './Actions'
---

<LayoutRevealBear title="Revelación de género" ogDescription="¡Acompañanos a descubrirlo!">
	<main class="flex flex-col relative bg-[#fdf4e6] shadow-2xl">
		<img src="/invites/revelacion/liston.webp" alt="liston" />
		<div class="invite-hero flex flex-col items-center px-4 pt-8 ms:pt-14">
			<div class="relative flex image-container mb-2 ms:scale-[1.4] ms:mb-9">
				<img
					class="w-[8rem] h-[7rem] mt-[0.2rem] animate-wiggle animate-infinite"
					src="/invites/revelacion/osa.webp"
					alt="osa"
				/>
				<img
					class="w-[8rem] h-[8rem] animate-wiggle animate-reverse animate-infinite"
					src="/invites/revelacion/oso.webp"
					alt="oso"
				/>
			</div>
			<h3
				class="main-title text-[3.5rem] font-bold leading-[0.9] sm:text-[5rem] mb-4 animate-fade-up animate-once animate-duration-700"
			>
				<span class="text-[#7f9abc]">¿Niño</span>
				<span class="text-[#e7be90]">o</span>
				<span class="text-[#f59b98]">Niña?</span>
			</h3>
			<p
				class="font-[Handlee] xs:text-[1.3rem] ms:text-[1.5rem] text-zinc-500 animate-fade-up animate-once animate-duration-700 animate-delay-[200ms]"
			>
				Acompañanos a descubrirlo
			</p>

			<div
				class="flex flex-col font-[Handlee] w-full text-center my-8 animate-fade-up animate-once animate-duration-700 animate-delay-[400ms]"
			>
				<p class="flex justify-center items-center text-[#e7be90] text-center w-full mb-0">
					<span
						class="w-[40%] xs:text-[1.6rem] ms:text-[1.8rem] relative before:absolute before:content-[''] before:h-[3px] before:w-[80%] before:ml-[10%] before:-top-1 before:left-0 before:bg-[#7f9abc] after:absolute after:content-[''] after:h-[3px] after:w-[80%] after:ml-[10%] after:-bottom-1 after:left-0 after:bg-[#7f9abc]"
						>Sábado</span
					>
					<span class="w-[20%] xs:text-[3rem] ms:text-[4rem]">30</span>
					<span
						class="w-[40%] xs:text-[1.6rem] ms:text-[1.8rem] relative before:absolute before:content-[''] before:h-[3px] before:w-[80%] before:ml-[10%] before:-top-1 before:left-0 before:bg-[#f59b98] after:absolute after:content-[''] after:h-[3px] after:w-[80%] after:ml-[10%] after:-bottom-1 after:left-0 after:bg-[#f59b98]"
						>de Marzo</span
					>
				</p>
				<p class="text-[#e7be90] block text-center w-full text-[1.3rem] ms:text-[1.5rem]">
					a las 5:00 pm
				</p>
			</div>
			<img
				src="/invites/revelacion/clip.webp"
				alt="clip"
				class="absolute bottom-[15rem] left-1 [z-index: -1] w-[5rem]"
			/>
			<CountdownTimer client:only="react" />
			<SelectSex client:only="react" />
			<Actions client:only="react" />
			<img
				src="/invites/revelacion/chupon.webp"
				alt="clip"
				class="absolute bottom-[2rem] right-1 w-[5rem]"
			/>
		</div>
	</main>
</LayoutRevealBear>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Handlee&family=Qwitcher+Grypen:wght@400;700&family=Sacramento&display=swap');

	main {
		margin: 0 auto;
		overflow-x: hidden;
		overflow-y: auto;
		padding: 0;
		max-width: 450px;
	}

	.main-title {
		font-family: 'Qwitcher Grypen';
	}

	.invite-hero {
		width: 100%;
		min-height: 100dvh;
		position: relative;
	}

	.invite-hero img.title-top {
		min-width: 30%;
		max-width: 50%;
		position: absolute;
		top: 2rem;
	}

	.invite-hero img.title {
		min-width: 100%;
		position: absolute;
		bottom: -3rem;
	}

	.invite-hero img.pico {
		position: absolute;
		bottom: 5rem;
		animation: bounce 1s ease-in-out infinite;
	}

	.invite-age {
		font-family: 'Mistrully';
		color: #f9f6ec;
		text-shadow:
			0 1rem #7ab267,
			0rem 0.8rem 1.5rem rgba(0, 0, 0, 0.4);
		line-height: 1;
	}

	.invite-info {
		background-image: url('/invites/minecraft/grass.webp');
		background-size: cover;
		background-repeat: no-repeat;
		width: 100%;
		min-height: 120dvh;
		padding: 2rem 2rem;
	}

	.join-party {
		position: absolute;
		bottom: -5rem;
		text-shadow:
			0rem 0.3rem #343530,
			0rem 1rem 1.5rem rgba(0, 0, 0, 0.7);
	}

	.date-container {
		margin: 2rem auto;
		border: 3px dashed white;
		position: relative;
	}

	.date-container::before {
		content: '';
		position: absolute;
		top: 0.1rem;
		left: 0.1rem;
		border: 0.2rem #09090983 dashed;
	}

	.date-day-number {
		color: #beff3d;
	}

	.date-text {
		text-shadow:
			0.3rem 0.3rem #2c2d29,
			0rem 1rem 1.5rem rgba(0, 0, 0, 0.7);
	}

	@keyframes bounce {
		0%,
		20%,
		50%,
		80%,
		100% {
			transform: translateY(0) rotate(134deg);
		}
		40% {
			transform: translateY(-30px) rotate(134deg);
		}
		60% {
			transform: translateY(-15px) rotate(134deg);
		}
	}
</style>

<style is:global>
	.minecraft-btn {
		background-image: url(data:image/png;base64,);
		font-family: 'VT323';
		border-color: #aaa #565656 #565656 #aaa;
		text-shadow: 0.2rem 0.2rem #4c4c4c;
		outline: 0.2rem solid #000;
	}

	.minecraft-btn:hover {
		background-image: url(data:image/png;base64,);
		border-color: #bdc6ff #59639a #59639a #bdc6ff;
	}

	.main-font {
		font-family: 'Qwitcher Grypen';
	}
</style>
