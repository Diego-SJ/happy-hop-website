---
import AddToCalendarButton from './AddToCalendarButton'
---

<div class="flex flex-col w-full px-4 z-50">
	<div class="max-h-min grid grid-cols-[1fr_1px_1fr] items-center relative">
		<div
			class="flex flex-col justify-center items-center text-center py-8 delay-[100ms] duration-[1000ms] taos:translate-x-[200px] taos:opacity-0"
			data-taos-offset="10"
		>
			<picture
				class="w-20 h-20 border-2 bg-[#d1bbbc83] border-white rounded-full flex justify-center items-center mb-4"
			>
				<img
					src="/invites/xv/staci/church.svg"
					alt="church"
					class="w-[60%] h-[60%] object-contain"
				/>
			</picture>
			<h5 class="text-xl font-medium text-white italic mb-1" style="font-family: 'Lora';">Misa</h5>
			<p
				class="text-white opacity-80 italic font-[Lora] text-xs ms:text-sm mb-4 font-thin max-w-[15ch] ms:max-w-[20ch]"
			>
				Parroquia de Nuestra Señora del Carmen
			</p>
			<AddToCalendarButton
				client:only="react"
				eventName="Misa de XV años - Staci Naomi"
				locationUrl="https://maps.app.goo.gl/S4bKFDcECCReFRXQ8"
				date={{ startDate: '2024-06-22', startTime: '17:45', endTime: '18:45' }}
			/>
		</div>
		<div class="h-full w-full bg-white opacity-40"></div>
		<div
			class="flex justify-start items-center pl-6 ms:pl-12 py-8 delay-[200ms] duration-[1000ms] taos:translate-x-[-200px] taos:opacity-0"
			data-taos-offset="10"
		>
			<p class="text-white opacity-80 italic font-[Lora] text-base">5:45 PM</p>
		</div>
	</div>

	<div class="max-h-min grid grid-cols-[1fr_1px_1fr] items-center relative">
