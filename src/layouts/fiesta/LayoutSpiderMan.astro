---
interface Props {
	title: string
	ogDescription?: string
	ogImage?: string
	ogUrl?: string
}

const { title, ogDescription, ogUrl } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ogDescription || '¡Unete a mi fiesta de cumpleaños!'} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content={ogDescription || '¡Unete a mi fiesta de cumpleaños!'}
		/>
		<meta
			property="og:image"
			content="https://firebasestorage.googleapis.com/v0/b/test1-d2593.appspot.com/o/assets%2Fwebp%2Fjosephog.webp?alt=media&token=78fb98a2-d15e-457e-91a3-ba19cde9c060"
		/>
		<meta property="og:url" content={ogUrl || 'https://happy-hop.com'} />
		<meta
			name="viewport"
			content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi"
		/>
	</head>
	<body>
		<slot />
		<img
			class="background-invite"
			src="/invites/fiesta/spider-man/spider-man-bg.webp"
			alt="spider man"
		/>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Bangers&display=swap');

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: system-ui, sans-serif;
		background: #ffffff;
		background-size: 224px;
	}

	body {
		position: relative;
	}

	html,
	body {
		overscroll-behavior: none;
	}

	.background-invite {
		width: 100dvw; /* Corregido */
		min-height: 100dvh;
		max-height: 100dvh;
		z-index: -2;
		position: fixed;
		top: 0;
		left: 0;
		object-fit: cover;
		filter: blur(1rem);
		transform: scale(1.2);
	}

	.custom-font {
		font-family: 'Bangers', sans-serif !important;
	}

	/* styles.css */
	.text-stroke-1 {
		-webkit-text-stroke-width: 2px;
		-webkit-text-stroke-color: #ad151c;
	}

	.text-stroke-2 {
		-webkit-text-stroke-width: 2px;
		-webkit-text-stroke-color: #dd424b;
	}

	.text-stroke-black {
		-webkit-text-stroke-width: 1px;
		-webkit-text-stroke-color: #0f0405;
	}

	.text-shadow {
		text-shadow: 4px 4px 6px rgba(0, 0, 0, 0.6);
	}

	.age-text-shadow {
		text-shadow: 1px 1px 10px rgba(0, 0, 0, 1);
	}

	/* Chrome, Safari, Edge, Opera */
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	/* Firefox */
	input[type='number'] {
		-moz-appearance: textfield;
	}

	/* Hide scrollbar for Chrome, Safari and Opera */
	*::-webkit-scrollbar {
		display: none;
	}

	/* Hide scrollbar for IE, Edge and Firefox */
	* {
		-ms-overflow-style: none; /* IE and Edge */
		scrollbar-width: none; /* Firefox */
	}
</style>
