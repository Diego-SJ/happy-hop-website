---
interface Props {
	title: string
	ogDescription?: string
	ogImage?: string
	ogUrl?: string
}

const { title, ogDescription, ogUrl } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ogDescription || '¡Unete a mi fiesta de cumpleaños!'} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content={'Hoy estoy radiante y llena de vida. Quiero compartir con ustedes este día soñado y que juntos celebremos hasta el amanecer. Mis Quince Años.'}
		/>
		<meta
			property="og:image"
			content="https://firebasestorage.googleapis.com/v0/b/test1-d2593.appspot.com/o/assets%2Fwebp%2Faricely-og.webp?alt=media&token=2a87babe-e654-43ec-841f-c883c2220652"
		/>
		<meta property="og:url" content={ogUrl || 'https://happy-hop.com'} />
		<meta
			name="viewport"
			content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi"
		/>
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css"
			rel="stylesheet"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@400;700;900&family=Dancing+Script:wght@400..700&family=Lora:ital,wght@0,400..700;1,400..700&family=MonteCarlo&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<img src="/invites/xv/aricely/aricely1.webp" alt="Aricely XV años" class="background-invite" />
		<slot />

		<div
			id="backdrop-bg"
			class="fixed w-screen h-screen flex flex-col left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-50 items-center pb-20"
		>
			<div
				id="backdrop-blur"
				class="fixed w-[110vw] h-[110vh] top-0 left-0 bg-white/10 blur-md backdrop-blur-lg z-[]"
			>
			</div>
			<div
				id="backdrop-info"
				class="w-[350px] flex flex-col fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-50 items-center pb-20"
			>
				<h1
					class="text-white xs:text-2xl ms:text-3xl pl-2 delay-[0ms] duration-[1000ms] taos:translate-y-[200px] taos:opacity-0"
					data-taos-offset="-300"
					style="font-family: 'Cinzel Decorative';"
				>
					mis xv años
				</h1>
				<h2
					class="text-white xs:text-6xl ms:text-7xl mt-1 mb-8 delay-[100ms] duration-[1000ms] taos:translate-y-[200px] taos:opacity-0"
					data-taos-offset="-300"
					style="font-family: 'MonteCarlo';"
				>
					Aricely López
				</h2>
				<h3
					class="text-white xs:text-1xl ms:text-3xl pl-2 delay-[200ms] duration-[1000ms] taos:translate-y-[200px] taos:opacity-0 mb-10"
					data-taos-offset="-300"
					style="font-family: 'Cinzel Decorative';"
				>
					20 de Julio
				</h3>
				<button
					id="invite-btn"
					class="bg-white/20 border border-white rounded-sm py-3 px-6 text-white delay-[300ms] duration-[1000ms] taos:translate-y-[200px] taos:opacity-0"
					style="font-family: 'Cinzel Decorative';"
				>
					Ver invitación
				</button>
			</div>
		</div>

		<button
			id="audio-btn"
			class="fixed w-10 h-10 bg-red-950/50 top-[4rem] right-0 p-1 z-50 shadow-2xl border border-black/90 hidden"
		>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" id="Play"
				><path
					d="M12 39c-.549 0-1.095-.15-1.578-.447A3.008 3.008 0 0 1 9 36V12c0-1.041.54-2.007 1.422-2.553a3.014 3.014 0 0 1 2.919-.132l24 12a3.003 3.003 0 0 1 0 5.37l-24 12c-.42.21-.885.315-1.341.315z"
					fill="#ffffff"
					class="color000000 svgShape"></path></svg
			>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				id="Pause"
				class="hidden"
				><path
					fill="#ffffff"
					d="M8 5a2 2 0 0 0-2 2v10a2 2 0 1 0 4 0V7a2 2 0 0 0-2-2zm8 0a2 2 0 0 0-2 2v10a2 2 0 1 0 4 0V7a2 2 0 0 0-2-2z"
					class="color000000 svgShape"></path></svg
			>
		</button>

		<audio id="my_audio" loop>
			<source src="/audio/atousandyears.mp3" type="audio/mpeg" />
		</audio>

		<script>
			let playIcon = document.querySelector('#Play') as SVGElement
			let pauseIcon = document.querySelector('#Pause') as SVGElement
			let audioBtn = document.querySelector('#audio-btn') as HTMLButtonElement
			let inviteBtn = document.querySelector('#invite-btn') as HTMLButtonElement
			const audioElement = document.getElementById('my_audio') as HTMLAudioElement

			inviteBtn.addEventListener('click', function () {
				audioElement.play()
				const backdropBg = document.getElementById('backdrop-bg')
				const backdropInfo = document.getElementById('backdrop-info')
				const backdropBlur = document.getElementById('backdrop-blur')
				if (backdropBg) backdropBg.classList.add('animate-fadeIn')
				if (backdropBlur) backdropBlur.classList.add('animate-fadeIn')
				if (backdropInfo) backdropInfo.classList.add('animate-fadeIn')
			})

			audioBtn.addEventListener('click', function () {
				if (audioElement) {
					let isPlaying = window.localStorage.getItem('audio_playing')
					if (isPlaying === 'true') {
						audioElement.pause()
						window.localStorage.setItem('audio_playing', 'false')
						if (playIcon) {
							playIcon.setAttribute('style', 'display: block')
						}

						if (pauseIcon) {
							pauseIcon.setAttribute('style', 'display: none')
						}
					} else {
						audioElement.play()
						window.localStorage.setItem('audio_playing', 'true')
						if (playIcon) {
							playIcon.setAttribute('style', 'display: none')
						}

						if (pauseIcon) {
							pauseIcon.setAttribute('style', 'display: block')
						}
					}
				}
			})
		</script>
		<script src="https://unpkg.com/taos@1.0.5/dist/taos.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
		<script>
			document.documentElement.classList.add('js')
		</script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 353, 60%, 52%;
		--accent-light: 224, 204, 250;
		--accent-dark: 353, 60%, 52%;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	body {
		position: relative;
	}

	.background-invite {
		width: 100dvw; /* Corregido */
		height: 100vh;
		z-index: -2;
		position: fixed;
		top: 0;
		left: 0;
		object-fit: cover;
		filter: blur(13px);
		transform: scale(1.2);
	}

	/* Chrome, Safari, Edge, Opera */
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	/* Firefox */
	input[type='number'] {
		-moz-appearance: textfield;
	}

	/* Hide scrollbar for Chrome, Safari and Opera */
	*::-webkit-scrollbar {
		display: none;
	}

	/* Hide scrollbar for IE, Edge and Firefox */
	* {
		-ms-overflow-style: none; /* IE and Edge */
		scrollbar-width: none; /* Firefox */
	}

	.text-primary-2 {
		color: hsl(var(--accent));
	}

	.bg-primary {
		background-color: hsl(var(--accent)) !important;
	}

	@keyframes fadeBackdrop {
		0% {
			opacity: 1;
		}

		100% {
			opacity: 0;
			visibility: hidden;
		}
	}

	.animate-fadeIn {
		animation: fadeBackdrop 1.2s forwards;
	}
</style>
